<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    					http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security 
                        http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <global-method-security pre-post-annotations="enabled"/>

    <http use-expressions="true">
    	<custom-filter ref="switchUserProcessingFilter" after="FILTER_SECURITY_INTERCEPTOR"/>
		
		<intercept-url pattern="/switch_user.html" access="hasRole('ROLE_ICTS-DEVSUPPORT')" />
		
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_ICTS-DEVSUPPORT')"/>
		
        <intercept-url pattern="/**" access="permitAll" />
     
		<form-login login-page="/login.html"  authentication-success-handler-ref="authenticationHandler"  authentication-failure-url="/login.html?error=true" />
		<logout logout-url="/logout" logout-success-url="/index.html" invalidate-session="true"  />
		
		<session-management session-fixation-protection="newSession">
			<concurrency-control max-sessions="5" error-if-maximum-exceeded="false"  />
		</session-management>
    </http>
    
    <ldap-server id="ldapServer" 
    			 url="ldaps://gc.iowa.uiowa.edu:3269/"  
    			 root="dc=iowa,dc=uiowa,dc=edu" 
    			 manager-dn="HAWKIDUSER" 
    			 manager-password="NEWPASSWORD"  />
    
    <ldap-user-service id="userDetailsService" 
    				   server-ref="ldapServer" 
    				   user-search-filter="(cn={0})" 
    				   group-search-base="dc=iowa,dc=uiowa,dc=edu" 
    				   user-search-base="dc=iowa,dc=uiowa,dc=edu" 
    				   group-search-filter="(member={0})"  />

    <authentication-manager>
    	<ldap-authentication-provider server-ref="ldapServer" user-search-filter="cn={0}"  
    		group-search-base="dc=iowa,dc=uiowa,dc=edu"
    		group-search-filter="(member={0})" 
    		group-role-attribute="cn" 
    		role-prefix="ROLE_"  user-search-base="dc=iowa,dc=uiowa,dc=edu" />
    </authentication-manager>

</beans:beans>